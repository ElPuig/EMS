<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="attendance_report_student">
        <t t-call="web.html_container">            
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>Attendance report: <span t-field="o.display_name"/></h1>
                        <t t-foreach="lines" t-as="subject">
                            <h2 t-field="subject.display_name"/>
                            <t t-set="data" t-value="lines[subject]"/> 

                            <!-- TODO: add charts -->
                            <h3>Overall</h3>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <t t-foreach="data['overall']" t-as="s">
                                            <th t-esc="status[s]"/>
                                        </t> 
                                    </tr>                                
                                </thead>
                                <tbody>                                
                                    <tr>      
                                        <t t-foreach="data['overall']" t-as="s">
                                            <t t-set="entry" t-value="data['overall'][s]"/> 
                                            <td>
                                                <span t-esc="entry['%']"/>% (<span t-esc="entry['count']"/> / <span t-esc="entry['total']"/>)
                                            </td>
                                        </t>       
                                    </tr>
                                </tbody>
                            </table>

                            <!-- TODO: repeated code, make a template and use it here and in overall -->
                            <h3>Breakdown</h3>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <t t-foreach="data['breakdown']" t-as="s">
                                            <th t-esc="status[s]"/>
                                        </t> 
                                    </tr>                                
                                </thead>
                                <tbody>                                
                                    <tr>      
                                        <t t-foreach="data['breakdown']" t-as="s">
                                            <t t-set="entry" t-value="data['breakdown'][s]"/> 
                                            <td>
                                                <span t-esc="entry['%']"/>% (<span t-esc="entry['count']"/> / <span t-esc="entry['total']"/>)
                                            </td>
                                        </t>       
                                    </tr>
                                </tbody>
                            </table>

                            <h3>Comments</h3>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th style="width:8%">Date</th>
                                        <th style="width:10%">Status</th>
                                        <th style="width:20%">Teacher</th>  <!-- Some subjects can be teached by more than one teacher -->
                                        <th>Comment</th>                                        
                                    </tr>                                
                                </thead>
                                <tbody> 
                                    <t t-foreach="data['comments']" t-as="c">
                                        <tr> 
                                            <td t-esc="c.attendance_session_id.date"/>
                                            <!-- TODO: if there's any problem with translations: self._fields['state'].convert_to_export(self.state, self) -->
                                            <td t-esc="dict(c.fields_get(allfields=['status'])['status']['selection'])[c.status]"/> 
                                            <td t-esc="c.attendance_session_id.session_teacher_id.display_name"/>
                                            <td t-esc="c.notes"/>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

                            <h3>Historical</h3>
                            <!-- TODO: this is the same as "Comments", better calling a template -->
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th style="width:8%">Date</th>
                                        <th style="width:10%">Status</th>
                                        <th style="width:20%">Teacher</th>  <!-- Some subjects can be teached by more than one teacher -->
                                        <th>Comment</th>                                        
                                    </tr>                                
                                </thead>
                                <tbody> 
                                    <t t-foreach="data['entries']" t-as="e">
                                        <tr> 
                                            <td t-esc="e.attendance_session_id.date"/>
                                            <td t-esc="dict(e.fields_get(allfields=['status'])['status']['selection'])[e.status]"/>
                                            <td t-esc="e.attendance_session_id.session_teacher_id.display_name"/>
                                            <td t-esc="e.notes"/>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>                  
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>