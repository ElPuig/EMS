<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="attendance_report_subject">
        <t t-call="web.html_container">            
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>Attendance report | <span t-field="o.subject_id.display_name"/> (<span t-field="o.group_id.display_name"/>)</h1>
                        <p>From <span t-field="o.from_date"/> to <span t-field="o.to_date"/></p>
                        <h2>Subject</h2>
                        <h3>Summary</h3>

                        <t t-set="data" t-value="main"/>
                        <t t-call="ims.attendance_template_sumary_table"/>
                        <p style="page-break-after:always;" />                    

                        <h3>Details</h3>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th rowspan="2" style='width: 20%'>Student</th>
                                    <t t-set="colspan" t-value="len(main.overall)" />
                                    <th t-att-colspan="colspan">Overall</th>

                                    <t t-set="colspan" t-value="len(main.breakdown)" />
                                    <th t-att-colspan="colspan">Breakdown</th>
                                </tr>
                                <tr>
                                    <t t-foreach="main.overall" t-as="s">
                                        <th t-esc="overall_status[s]"/>
                                    </t> 
                                    <t t-foreach="main.breakdown" t-as="s">
                                        <th t-esc="attendance_status[s]"/>
                                    </t> 
                                </tr>                                
                            </thead>
                            <tbody> 
                                <t t-foreach="lines" t-as="student">     
                                    <tr>
                                        <td  t-esc="student.display_name"/>
                                        <t t-set="line" t-value="lines[student]"/>                                                                              
                                        <t t-foreach="line.overall" t-as="s">
                                            <t t-set="entry" t-value="line.overall[s]"/> 
                                            <td>
                                                <span t-esc="entry['%']"/>% (<span t-esc="entry['count']"/> / <span t-esc="entry['total']"/>)
                                            </td>
                                        </t>  
                                        <t t-foreach="line.breakdown" t-as="s">
                                            <t t-set="entry" t-value="line.breakdown[s]"/> 
                                            <td>
                                                <span t-esc="entry['%']"/>% (<span t-esc="entry['count']"/> / <span t-esc="entry['total']"/>)
                                            </td>
                                        </t>     
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <p style="page-break-after:always;" />

                        <h3>Comments</h3>
                        <!-- TODO: continue -->
                        <t t-set="extra" t-value="['th-style' : 'width:20%;', ]"/>
                        <t t-call="ims.attendance_template_details_table"/>

                        <table class="table">
                            <thead>
                                <tr>
                                    <th style="width:8%">Date</th>
                                    <th style="width:10%">Status</th>
                                    <th style="width:20%">Teacher</th>  <!-- Some subjects can be teached by more than one teacher -->
                                    <th style="width:20%">Student</th>  
                                    <th>Comment</th>                                        
                                </tr>                                
                            </thead>
                            <tbody> 
                                <t t-foreach="main.comments" t-as="c">
                                    <tr> 
                                        <td t-esc="c.attendance_session_id.date"/>
                                        <!-- TODO: if there's any problem with translations: self._fields['state'].convert_to_export(self.state, self) -->
                                        <td t-esc="dict(c.fields_get(allfields=['status'])['status']['selection'])[c.status]"/> 
                                        <td t-esc="c.attendance_session_id.session_teacher_id.display_name"/>
                                        <td t-esc="c.student_id.display_name"/>
                                        <td t-esc="c.notes"/>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <p style="page-break-after:always;" />
                        
                        <h2>Students</h2>
                        <t t-foreach="lines" t-as="student">
                            <h3 t-field="student.display_name"/>
                                                        
                            <h4>Summary</h4>
                            <t t-set="data" t-value="lines[student]"/> 
                            <t t-call="ims.attendance_template_sumary_table"/>                            

                            <h4>Details</h4>
                            <t t-call="ims.attendance_template_details_table"/>
                            <p style="page-break-after:always;" />
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>