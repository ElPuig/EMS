<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">             
        <!-- To get all the groups available, export the list from user/groups including the "name" and the "external ID" fields -->
 
        <record model="ir.module.category" id="category_main">
            <field name="name">EMS</field>
            <field name="description">Educational Management System</field>
            <field name="sequence">1</field>
        </record>        

        <record model="res.groups" id="group_teacher">
            <field name="name">Teacher</field>
            <field name="comment">Teacher's access rights.</field>
            <field name="category_id" ref="ems.category_main"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('hr.group_hr_user'))]"/>
        </record>

        <!-- TODO: this group has not been yet setup in ir.modal.access.  -->
        <record model="res.groups" id="group_secretary">
            <field name="name">Secretary</field>
            <field name="comment">Secretary's access rights.</field>
            <field name="category_id" ref="ems.category_main"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>  

        <record model="res.groups" id="group_admin">
            <field name="name">Administrator</field>
            <field name="comment">All access rights.</field>
            <field name="category_id" ref="ems.category_main"/>
            <field name="implied_ids" eval="[(4, ref('ems.group_teacher')), (4, ref('ems.group_secretary'))]"/>    
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>  

        <!-- <record model="res.groups" id="hr.group_hr_user">
            <field name="implied_ids" eval="[(4,ref('group_teacher'))]"/>
        </record>    -->

        <record model="res.groups" id="project.group_project_manager">
            <field name="users" eval="[(3,ref('base.user_root')), (3,ref('base.user_admin'))]"/>
        </record>   

        <record model="res.groups" id="project.group_project_user">
            <field name="users" eval="[(3,ref('base.user_root')), (3,ref('base.user_admin'))]"/>
        </record>  

        <record model="res.groups" id="mass_mailing.group_mass_mailing_user">
            <field name="users" eval="[(3,ref('base.user_root')), (3,ref('base.user_admin'))]"/>
        </record>   

        <record model="res.groups" id="survey.group_survey_manager">
            <field name="users" eval="[(3,ref('base.user_root')), (3,ref('base.user_admin'))]"/>
        </record>   

        <record model="res.groups" id="survey.group_survey_user">
            <field name="users" eval="[(3,ref('base.user_root')), (3,ref('base.user_admin'))]"/>
        </record>   

        <record model="ir.ui.menu" id="utm.menu_link_tracker_root">
            <field name="active">false</field>
        </record>
