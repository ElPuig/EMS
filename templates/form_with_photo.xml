<odoo>
    <data>
        <record model="ir.ui.view" id="template_form_with_photo">
            <field name="name">ims.template.form_with_photo</field>
            <field name="model">ims.person</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="4">
                            <group col="1" id="photo" string="">
                                <field name="image" string="" widget="image" />
                            </group>

                            <group id="data" col="1" colspan="3">
                                <group id="main" string="Main data">
                                    <group>
                                        <field name="name"/>    
                                    </group>                                                                                   
                                </group>                                
                            </group>                         
                        </group>
               
                        <notebook>                               
                            <page id="notes" string="Notes">
                                <field name="notes" placeholder="Write down here your notes..."/>
                            </page>
                        </notebook>
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>