<odoo>
    <data>
        <record id="view_ims_administrative_kanban" model="ir.ui.view">
            <field name="name">ims.administrative kanban view</field>
            <field name="model">ims.administrative</field>
            <field name="mode">primary</field>      
            <field name="inherit_id" ref="ims.view_ims_corporate_person_kanban"/> 
            <field name="arch" type="xml">  
                <xpath expr="//img[@id='photo']" position="attributes">
                    <attribute name="t-att-src">kanban_image('ims.administrative', 'image', record.id.raw_value)</attribute>
                </xpath> 

                <xpath expr="//kanban" position="inside">
                    <!-- WARNING: All the Kanban fields must be included also as "fields" within the view. -->
                    <field name="position"/>
                </xpath>

                <xpath expr="//div[@id='title']/strong" position="inside">
                    <t> &#40;</t>
                    <t t-esc="record.position.value"/>
                    <t>&#41;</t>    
                </xpath> 
            </field>		      
        </record>
    </data>
</odoo>