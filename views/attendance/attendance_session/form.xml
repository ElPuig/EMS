<odoo>
    <data>
        <record model="ir.ui.view" id="view_attendance_session_form">
            <field name="name">ims.attendance_session.form</field>
            <field name="model">ims.attendance_session</field>
            <field name="arch" type="xml">
                <form string="Session">
                    <sheet>
                        <group string="Basic data">
                            <field name="date"/>
                            <field name="duration" tooltip="Duration in minutes"/>
                            <!-- <field name="date"/> -->
                            <!-- <field name="start_time" widget="float_time"/> -->
                            <!-- <field name="end_time" widget="float_time"/> -->
                            <field name="notes"/>
                            <field name="hasStatuses" invisible="1"/>                      
                        </group>
                        <notebook>
                            <page string="Statuses">
                                <field name="attendance_statuses" widget="one2many_list" context="{'show_attribute': False}">
                                    <tree>
                                        <field name="student"/>
                                        <field name="status"/>
                                        <field name="notes"/>
                                        <button name="action_miss" icon="fa-times" title="miss" type="object" attrs="{'invisible': [('status', '=', '2')]}"/> <!--TODO: Figure out how to reference model constants-->
                                        <button name="action_attend" icon="fa-check" title="attend" type="object" attrs="{'invisible': [('status', '=', '1')]}"/>
                                        <button name="action_delay" icon="fa-clock-o" title="delay" type="object" attrs="{'invisible': [('status', '=', '3')]}"/>
                                    </tree>
                                </field>
                            </page>                                                        
                        </notebook>
                        <button name="GenerateStatusesByTemplates" 
                            string="Generate Statuses" 
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('hasStatuses', '=', True)]}"
                            context="{'active_id': active_id, 'active_model': active_model}"
                        />                    
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>