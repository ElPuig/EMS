<odoo>
    <data>
        <record model="ir.ui.view" id="view_attendance_session_form">
            <field name="name">ims.attendance_session.form</field>
            <field name="model">ims.attendance_session</field>
            <field name="arch" type="xml">
                <form string="Session">
                    <!-- <field name="_display_warning" invisible="0"/>
                    <div class="alert alert-warning" role="alert" name="test_warning" attrs="{'invisible': [('_display_warning', '=', False)]}"> -->
                        <!-- TODO: this should be translated (localization) -->
                        <!-- Unable to load the current session, maybe none has been scheduled for the current date and time?. Please, choose one manually or activate the "guard mode" if needed.
                    </div> -->
                    <sheet>
                        <group string="Main data" col="6">                             
                            <group colspan="4">      
                                <!-- Order not working, no name on field (just name_get) so, maybe name should be stored using name_get?  -->
                                <field name="attendance_schedule_id" context="{'order_display': 'name asc' }"/> 
                            </group>    
                            <group colspan="2">
                                <field name="guard_mode"/>
                            </group>                            
                            <group colspan="2">
                                <field name="teacher_id"/>                               
                            </group>
                            <group colspan="1">
                                <field name="date"/>
                            </group>         
                            <group colspan="1">
                                <field name="weekday"/>
                            </group>                          
                            <group colspan="2">
                                <field name="level_id"/>                               
                            </group>

                            <group colspan="2">
                                <field name="study_id"/>                               
                            </group>
                            <group colspan="1">
                                <field name="group_id"/>
                            </group>
                            <group colspan="1">
                                <field name="space_id"/>
                            </group>                                                      
                            <group colspan="2">
                                <field name="subject_id"/>                               
                            </group>                                                           
                        </group>
                        <notebook>
                            <page string="Statuses">
                                <field name="attendance_status_ids" widget="one2many_list" context="{'show_attribute': False}">
                                    <tree editable="bottom" default_order="student_id asc">
                                        <field name="student_id" width="150px"/>
                                        <field name="status" widget="radio" options="{'horizontal': true}"/>
                                        <field name="notes" width="300px"/>
                                    </tree>                                   
                                </field>
                            </page>     
                            <page string="Notes">
                                <field name="notes"/>
                            </page>                                                    
                        </notebook>

                        <!-- <button name="generate_statuses_by_templates" 
                            string="Generate Statuses" 
                            type="object"
                            class="oe_highlight"
                            attrs="{'invisible': [('has_statuses', '=', True)]}"
                            context="{'active_id': active_id, 'active_model': active_model}"
                        /> -->
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>