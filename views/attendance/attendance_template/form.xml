<odoo>
    <data>
        <record model="ir.ui.view" id="view_attendance_template_form">
            <field name="name">ima.attendance_template.form</field>
            <field name="model">ims.attendance_template</field>
            <field name="arch" type="xml">
                <form string="Template">
                    <sheet>
                        <group string="Main data" col="6">   
                            <group colspan="6">
                                <field name="color" widget="color_picker"/>
                            </group>
                            
                            <group colspan="2">
                                <field name="teacher_id"/>                               
                            </group>
                            <group colspan="1">
                                <field name="start_date"/>
                            </group>
                            <group colspan="1">
                                <field name="end_date"/>
                            </group>
                            <group colspan="2">
                                <field name="level_id"/>                               
                            </group>

                            <group colspan="2">
                                <field name="study_id"/>                               
                            </group>
                            <group colspan="1">
                                <field name="group_id"/>
                            </group>
                            <group colspan="1">
                                <field name="space_id"/>
                            </group>                                                      
                            <group colspan="2">
                                <field name="subject_id"/>                               
                            </group>                                                           
                        </group>
                                            
                        <notebook>
                            <page string="Scheduled">
                                <field name="attendance_schedule_ids" string="" context="{'show_attribute': False}">
                                    <tree editable="bottom" default_order="weekday asc, start_time asc">
                                        <field name="weekday" width="175px" />
                                        <field name="space_id" />
                                        <field name="start_time" widget="float_time" width="120px" />
                                        <field name="end_time" widget="float_time" width="120px" />                                        
                                    </tree>
                                </field>
                            </page>

                            <page string="Students">
                                <field name="student_ids" mode="kanban" />                               
                            </page>
                        </notebook> 
                    </sheet>	
                </form>
            </field>
        </record>
    </data>
</odoo>