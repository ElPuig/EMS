<odoo>
    <data>
        <record model="ir.ui.view" id="view_attendance_template_list">
            <field name="name">ims.attendance_template.list</field>
            <field name="model">ims.attendance_template</field>
            <field name="arch" type="xml">
                 <list expand="1" >
                    <field name="teacher_id"/>
                    <field name="level_id"/>
                    <field name="study_id"/>                    
                    <field name="subject_id"/>
                    <field name="group_id"/>
                    <field name="space_id"/>                    
                    <field name="color" widget="color_picker"/>                
                </list>
            </field>
        </record>   
    </data>
</odoo>