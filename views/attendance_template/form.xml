<odoo>
    <data>
        <record id="view_ims_attendance_template_form" model="ir.ui.view">
            <field name="name">Attendance template form</field>
            <field name="model">ims.attendance_template</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Template">
                    <sheet>
                        <group string="Basic data">
                            <field name="start_time" widget="float_time"/>
                            <field name="end_time" widget="float_time"/>
                            <field name="teacher"/>
                            <field name="student"/>
                            <field name="study"/>
                            <field name="mp"/>
                            <field name="uf"/>
                            <field name="classroom"/>
                            <field name="weekday"/>
                            <field name="color" widget="color_picker"/>
                            <field name="attendance_group"/>                      
                        </group>                    
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>