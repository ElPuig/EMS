<odoo>
    <data>
        <record model="ir.ui.view" id="view_content_form">
            <field name="name">ims.content.form</field>
            <field name="model">ims.content</field>
            <field name="arch" type="xml">				
                <form string="content">                   
                    <sheet>                        
                        <group string="Main data" col="6">                            
                            <group>
                                <field name="acronym"/>
                            </group>
                            <group colspan="4">							
                                <field name="name"/>
                                <field name="content_id" invisible="0"/>
                                <field name="subject_id" invisible="0"/>
                                <field name="level" invisible="0"/>
                            </group>                            
                        </group>
                        
                        <notebook>                           
                            <page string="Composite">
                                <field name="content_ids" widget="one2many" context="{'default_content_id': content_id}">
                                    <tree editable="bottom" default_order="code asc, level asc, acronym asc"
                                        decoration-bf="level==1" decoration-muted="level==2" decoration-it="level>=3">
                                        <field name="code"/>
                                        <field name="acronym"/>
                                        <field name="name"/>                                               
                                        <button class="oe_stat_button" title="Edit Content" icon="fa-pencil-square-o" name="open_form_content" type="object" />                                 

                                        <!-- Needed but hidden for filtering purposes -->
                                        <field name="subject_id" invisible="1"/>
                                        <field name="level" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Notes">
                                <field name="notes" placeholder="Write down here your notes..."/>
                            </page>
                        </notebook>
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>