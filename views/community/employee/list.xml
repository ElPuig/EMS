<odoo>
    <data>
        <record model="ir.ui.view" id="view_employee_list">
            <field name="name">ems.employee.list</field>
            <field name="model">hr.employee</field>            
            <field name="inherit_id" ref="hr.view_employee_tree"/> 
            <field name="arch" type="xml">                        
                <xpath expr="//field[@name='coach_id']" position="attributes">
                    <attribute name="column_invisible">True</attribute>
                </xpath>   

                <field name="job_id" position="after">
                    <field name="employee_type" groups="base.group_system,hr.group_hr_user,ems.ems_group_user"/>
                </field>                                     

                 <!-- <field name="employee_type" position="attributes">
                    <attribute name="groups">base.group_system,hr.group_hr_user,ems.ems_group_user</attribute>
                </field>  -->
            </field>		      
        </record>   
    </data>
</odoo>