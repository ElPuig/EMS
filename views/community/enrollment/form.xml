<odoo>
    <data>
        <record model="ir.ui.view" id="view_enrollment_form">
            <field name="name">ims.enrollment.form</field>
            <field name="model">ims.enrollment</field>
            <field name="arch" type="xml">
                <form string="enrollment">
                    <sheet>
                        <group string="Main data" col="4">
                            <group colspan="4">
                                <field name="student_id"/>
                            </group>
                            <group colspan="3">
                                <field name="subject_id"/>
                            </group>
                            <group>
                                <field name="group_id"/>    
                            </group>                            
                        </group>                  
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>