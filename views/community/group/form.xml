<odoo>
    <data>
        <record model="ir.ui.view" id="view_group_form">
            <field name="name">ims.group.form</field>
            <field name="model">ims.group</field>
            <field name="arch" type="xml">
                <form string="Group">
                    <sheet>                        
                        <group string="Main data" col="4">                            
                            <group colspan="2">
                                <field name="study_id" />
                            </group>
                            <group>
                                <field name="course" />
                            </group>
                            <group>
                                <field name="acronym" />
                            </group>
                            <group colspan="2">
                                <field name="tutor_id" widget="many2one_avatar_employee" />
                            </group>
                            <group>
                                <field name="delegate_id" /> <!-- TODO: many2one_avatar_employee does not work, maybe could be extended for res.partner? -->
                            </group>
                            <group>
                                <field name="space_id" />
                            </group>
                        </group>                       
                        
                        <notebook> 
                            <page string="Students">
                                 <field name="main_student_ids" widget="many2many" context="{'show_attribute': False}">
                                    <tree default_order="name asc">                                       
                                        <field name="image_1920" widget="image" />
                                        <field name="name" class="align-middle"/>
                                        <field name="email" class="align-middle"/>
                                        <field name="phone" class="align-middle"/>
                                    </tree>
                                </field>
                            </page>                         
  
                             <page string="Enrolled">
                                <!-- TODO: on clic, open the student's form. Context is not enough, because not only the form must be selected, also the model. Help? https://www.odoo.com/fi_FI/forum/apua-1/how-to-open-a-form-view-from-click-on-list-view-68175 -->
                                <field name="transient_enrollment_ids" widget="many2many" style="pointer-events:none;"> 
                                    <tree default_order="student_id asc">    
                                        <field name="image_1920" widget="image" />                                   
                                        <field name="student_id" class="align-middle"/>
                                        <field name="subject_ids" widget="many2many_tags"/>
                                    </tree>
                                </field>
                            </page>
                           
                            <page string="Notes">
                                <field name="notes" placeholder="Write down here your notes..."/>
                            </page>
                        </notebook>
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>