<odoo>
    <data>
        <record model="ir.ui.view" id="view_group_list">
            <field name="name">ims.group.list</field>
            <field name="model">ims.group</field>
            <field name="arch" type="xml">
                <list expand="1" default_order="name asc">      
                    <field name="name" string="Group"/>
                    <field name="space_id"/>
                    <field name="tutor_id" widget="many2one_avatar_employee"/>
                    <field name="delegate_id" widget="many2one_avatar"/>
                </list>
            </field>
        </record>   
    </data>
</odoo>