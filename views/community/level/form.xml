<odoo>
    <data>
        <record model="ir.ui.view" id="view_level_form">
            <field name="name">ims.level.form</field>
            <field name="model">ims.level</field>
            <field name="arch" type="xml">
                <form string="Level">
                    <sheet>
                        <group string="Main data" col="4">
                            <group>
                                <field name="acronym"/>
                            </group>
                            <group colspan="3">
                                <field name="name"/>    
                            </group>                            
                        </group>  

                        <notebook>
                            <page string="Studies">
                                <field name="study_ids" widget="many2many">
                                    <tree editable="bottom" default_order="code asc, acronym asc, name asc">
                                        <field name="code"/>
                                        <field name="acronym"/>
                                        <field name="name"/>
                                        <button class="oe_stat_button" title="Edit Study" icon="fa-pencil-square-o" name="open_form_study" type="object" />
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Notes">
                                <field name="notes" placeholder="Write down here your notes..."/>
                            </page>
                        </notebook>                  
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>