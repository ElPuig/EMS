<odoo>
    <data>
        <record model="ir.ui.view" id="view_space_form">
            <field name="name">ems.space.form</field>
            <field name="model">ems.space</field>
            <field name="arch" type="xml">
                <form string="space">
                    <sheet>
                        <group string="Main data" col="3">
                            <group> 
                                <field name="work_location_id"/>
                            </group>
                            <group>
                                <field name="code"/>
                            </group>                               
                            <group>
                                <field name="space_type_id"/>
                            </group>
                            <group colspan="3">
                                <field name="name"/>
                            </group>
                        </group>                    
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>