<odoo>
    <data>
        <record model="ir.ui.view" id="view_space_list">
            <field name="name">ems.space.list</field>
            <field name="model">ems.space</field>
            <field name="arch" type="xml">
                <list expand="True" default_order="code asc">                           
                    <field name="work_location_id" width="100px"  />
                    <field name="code"/>                    
                    <field name="space_type_id" width="100px"/>
                    <field name="name"/>                       
                </list>
            </field>
        </record>        
    </data>
</odoo>