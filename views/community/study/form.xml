<odoo>
    <data>
        <record model="ir.ui.view" id="view_study_form">
            <field name="name">ims.study.form</field>
            <field name="model">ims.study</field>
            <field name="arch" type="xml">
                <form string="Studies">
                    <sheet>                        
                        <group string="Main data" col="4">                            
                            <group>
                                <field name="acronym" />
                            </group>
                            <group colspan="3">
                                <field name="name" />
                            </group>
                        </group>
                         <group string="Administrative data" col="4">
                            <group>
                                <field name="level_id" />
                            </group>
                             <group>
                                <field name="code" />
                            </group>
                            <group>
                                <field name="date"/>                                
                            </group>                           
                            <group>
                                <field name="deprecated"/>                                
                            </group>                                                                         
                        </group>
                        
                        <notebook>      
                            <page string="Subjects">
                                <field name="subject_ids" widget="one2many">
                                     <tree editable="bottom" expand="1" default_order="code asc, level asc, acronym asc"
                                           decoration-bf="level==1" decoration-muted="level==2" decoration-it="level>=3">
                                        <field name="level" invisible="1"/>
                                        <field name="code"/>
                                        <field name="acronym"/>
                                        <field name="name"/>
                                        <button class="oe_stat_button" title="Edit Subject" icon="fa-pencil-square-o" name="open_form_subject" type="object" />
                                    </tree>
                                </field>
                            </page>

                             <page string="Attached files">
                                <field name="attachment_ids" widget="many2many" default_order="name asc" context="{'default_domain': 'ims.study'}">
                                     <tree editable="bottom" expand="1" default_order="name asc">
                                        <field name="name" />
                                        <button class="btn btn-secondary fa fa-pencil" title="Edit File" name="open_form_attachment" type="object" />
                                        <button class="btn btn-secondary fa fa-download" title="Download File" name="download" type="object" />
                                    </tree>
                                </field>
                            </page>

                            <page string="Notes">
                                <field name="notes" placeholder="Write down here your notes..."/>
                            </page>
                        </notebook>
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>