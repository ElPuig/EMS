<odoo>
    <data>
        <record model="ir.ui.view" id="view_study_list">
            <field name="name">ems.study.list</field>
            <field name="model">ems.study</field>
            <field name="arch" type="xml">
                <list expand="True" default_order="level_id asc, code asc">                    
                    <field name="acronym"/>
                    <field name="name" class="w-50"/>
                    <field name="date" string="Release"/>
                    <field name="deprecated" class="text-center"/>                          
                     <!-- Hidden but needed to filter or display properly -->                    
                    <field name="code" column_invisible="True"/>  
                    <field name="level_id" column_invisible="True"/>    
                </list>
            </field>
        </record>   
    </data>
</odoo>