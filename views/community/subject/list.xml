<odoo>
    <data>
        <record model="ir.ui.view" id="view_subject_list">
            <field name="name">ims.subject.list</field>
            <field name="model">ims.subject_view</field>
            <field name="arch" type="xml">
                <tree expand="1" default_order="study_id desc, code asc, level asc, acronym asc"
                    decoration-bf="level==1" decoration-muted="level==2" decoration-it="level>=3">
                    <!--https://www.cybrosys.com/blog/tree-view-decoration-attributes-in-odoo-15 -->                    
                    <field name="code"/>
                    <field name="acronym"/>
                    <field name="name" class="w-75"/>
                    <!-- Hidden but needed to filter or display properly -->
                    <field name="study_id" invisible="1"/>  
                    <field name="level" invisible="1"/>
                    <field name="subject_id" invisible="1"/>  
                </tree>              
            </field>
        </record>   

        <record model="ir.ui.view" id="view_subject_list_customs">
            <field name="name">ims.subject.list.customs</field>
            <field name="model">ims.subject_view</field>
            <field name="inherit_id" ref="ims.view_subject_list"/>
            <field name="arch" type="xml">
            <!-- TODO: https://www.cybrosys.com/blog/how-to-add-a-create-button-near-tree-and-kanban-view-in-odoo-16 -->
            <!-- Does not work... inherit from t-inherit="web.ListView.Buttons"?-->
               <xpath expr="//*[@class='btn btn-primary o_list_button_add']" position="after">
                    <!-- <attribute name="t-on-click">open_form_subject</attribute> -->
                    <!-- <attribute name="name">open_form_subject</attribute> -->
                     <button type="button" class="btn btn-primary" style="margin-left: 10px;" name="open_form_subject">
                        Open Wizard
                    </button>
                </xpath> 
            </field>
        </record>
        
        <record model="ir.ui.view" id="subject_search">
            <field name="name">ims subject search</field>
            <field name="model">ims.subject_view</field>            
            <field name="arch" type="xml">
                <search string="Study">
                    <group expand="1" string="Order By">
                        <filter string="Study" name="group_by_study" context="{'group_by':'study_id'}" />
                    </group>
                </search>
            </field>
        </record>  
    </data>
</odoo>