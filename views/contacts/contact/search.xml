<odoo>
    <data>
        <record model="ir.ui.view" id="view_contact_search">
            <field name="name">ims.contcat.search</field>
            <field name="model">res.partner</field>            
            <field name="inherit_id" ref="base.view_res_partner_filter"/> 
            <field name="arch" type="xml">                        
                 <!-- 
                    TODO: 
                        Stuents: by group on the left panel
                        Providers: by company on the left panel
                        All: by type (sublevels???)
                -->

                <xpath expr="//group[@name='group_by']" position="after">                     
                     <searchpanel>
                        <field name="company_id" groups="base.group_multi_company" icon="fa-building" enable_counters="1"/>
                        <field name="contact_type" icon="fa-users" enable_counters="1"/>
                    </searchpanel>
                </xpath>                               
            </field>		      
        </record>   
    </data>
</odoo>