<odoo>
    <data>
         <record model="ir.ui.view" id="view_group_form">
            <field name="name">ims.group.form</field>
            <field name="model">ims.group</field>
            <field name="arch" type="xml">
                <form string="Group">
                    <sheet>                        
                        <group string="Main data" col="4">                            
                            <group colspan="2">
                                <field name="study_id" />
                            </group>
                            <group>
                                <field name="course" />
                            </group>
                            <group>
                                <field name="acronym" />
                            </group>
                            <group colspan="2">
                                <field name="tutor_id" />
                            </group>
                            <group>
                                <field name="delegate_id" />
                            </group>
                            <group>
                                <field name="space_id" />
                            </group>
                        </group>                       
                        
                        <notebook> 
                            <page string="Students">
                                <field name="student_ids" mode="kanban" inherit_id="view_employee_kanban" />
                                <!-- TODO: add a remove button: https://www.odoo.com/es_ES/forum/ayuda-1/delete-button-in-kanban-view-odoo-11-129296 -->
                            </page>        

                            <page string="Notes">
                                <field name="notes" placeholder="Write down here your notes..."/>
                            </page>
                        </notebook>
                    </sheet>	
                </form>
            </field>			
        </record>

