<odoo>
    <data>
        <record model="ir.ui.view" id="view_ims_formative_unit_list">
            <field name="name">ims.formative_unit.list</field>
            <field name="model">ims.formative_unit</field>         
            <field name="arch" type="xml">               
                <tree expand="1" default_order="professional_module asc, code asc">
                    <field name="professional_module"/>
                    <field name="code"/>
                    <field name="acronym"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>   

        <record model="ir.ui.view" id="uf_search">
            <field name="name">ims uf search</field>
            <field name="model">ims.formative_unit</field>            
            <field name="arch" type="xml">
                <search string="Professional Module">
                    <group expand="1" string="Order By">
                        <filter string="Professional Module" name="group_by_professional_module" context="{'group_by':'professional_module'}" />
                    </group>
                </search>
            </field>
        </record>  
    </data>
</odoo>