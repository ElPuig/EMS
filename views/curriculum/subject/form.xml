<odoo>
    <data>
        <record model="ir.ui.view" id="view_subject_form">
            <field name="name">ims.subject.form</field>
            <field name="model">ims.subject</field>
            <field name="arch" type="xml">				
                <form string="subject">                   
                    <sheet>                        
                        <group string="Main data" col="4">
                            <group colspan="4">
                                <field name="study_id"/>
                            </group>
                            <group>
                                <field name="code"/>
                            </group>
                            <group>							
                                <field name="acronym"/>
                            </group>
                            <group colspan="2">							
                                <field name="name"/>
                            </group>
                        </group>
                        
                        <notebook>                           
                            <page string="Sub subjects">
                                <field name="subject_ids" widget="many2many">
                                    <tree>
                                        <field name="code"/>
                                        <field name="acronym"/>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Notes">
                                <field name="notes" placeholder="Write down here your notes..."/>
                            </page>
                        </notebook>
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>