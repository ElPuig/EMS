<odoo>
    <data>
        <record model="ir.ui.view" id="view_subject_list">
            <field name="name">ims.subject.list</field>
            <field name="model">ims.subject</field>
            <field name="arch" type="xml">
                <tree expand="1" default_order="study_id desc, code asc, acronym asc">
                    <field name="study_id"/>
                    <!-- TODO: order also by level, hide this field and paint the rows by level. This will clarify which one is inside another one... I hope... -->
                    <!-- <field name="level"/>     -->
                    <field name="code"/>
                    <field name="acronym"/>
                    <field name="name"/>    
                    <!-- <field name="subject_ids" widget="many2many_tags" /> -->
                </tree>
              
            </field>
        </record>   

        <record model="ir.ui.view" id="subject_search">
            <field name="name">ims subject search</field>
            <field name="model">ims.subject</field>            
            <field name="arch" type="xml">
                <search string="Study">
                    <group expand="1" string="Order By">
                        <filter string="Study" name="group_by_study" context="{'group_by':'study_id'}" />
                    </group>
                </search>
            </field>
        </record>  
    </data>
</odoo>