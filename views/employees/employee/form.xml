<odoo>
    <data>
        <record model="ir.ui.view" id="view_employee_form">
            <field name="name">ims.employee.form</field>
            <field name="model">hr.employee</field>            
            <field name="inherit_id" ref="hr.view_employee_form"/> 
            <field name="arch" type="xml">                          
               <!-- 
                    Job positions (consultant, chief officer, etc.) are and should be only one. This is used in kanban card and form (within hierarchy). 
                    Job positions has a name, a department and a job type. In IMS, department and job type are assigned to the employee. 
                    
                    Kanban view: display the employment_type (Teacher, Student, etc.) where the job_position is displayed
                    Fomr view' hierarchy: display the roles (Director, Chief of...), separated by comma, where the job_position is displayed.

                    Unable to change the widget hr_org_chart data... so maybe jobs should be used instead of roles? Only one job per employee is allowed...
                    
                -->

                <field name="name" position="replace">
                    <!-- NOTE: I could'nt find a way to setup the placeholders as a computed field using the 'employee_type'... -->                    
                    <field name="name" placeholder="Teacher's Name"     groups="hr.group_hr_user" attrs="{'invisible': [('employee_type', '!=', 'teacher')]}"/>
                    <field name="name" placeholder="ASP's Name"         groups="hr.group_hr_user" attrs="{'invisible': [('employee_type', '!=', 'asp')]}"/>
                </field>

                <xpath expr="//group[@name='payroll_group']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>    

                <field name="job_title" position="replace">
                    <field name="job_id" placeholder="Job Position" groups="hr.group_hr_user" domain="[('employee_type', '=', 'asp')]" />                       
                </field>

                <field name="category_ids" position="replace">
                    <field name="roles" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Roles" />          
                </field>        

                <field name="coach_id" position="attributes">
                   <attribute name="groups">hr.group_hr_user</attribute>
                   <attribute name="attrs">{'invisible': [('employee_type', '!=', 'student')]}</attribute>
                </field>
              
                <field name="parent_id" position="attributes">
                    <attribute name="groups">hr.group_hr_user</attribute>
                    <attribute name="attrs">{'invisible': [('employee_type', '=', 'student')]}</attribute>
                </field>

                <field name="employee_type" position="after">
                    <field name="contract_type" />
                </field>   

                <xpath expr="//notebook" position="inside">
                    <page string="Teaching">
                        <field name="teaching">
                            <tree editable="bottom">
                                <field name="formative_unit"/>
                                <field name="group"/>
                            </tree>
                        </field>
                    </page>    

                    <page string="Tutorships">
                        <field name="tutorships" widget="many2many">
                            <tree>
                                <field name="name" string="Group"/>
                                <field name="classroom"/>
                            </tree>
                        </field>
                    </page>                    
                </xpath>             
            </field>		      
        </record>   
    </data>
</odoo>