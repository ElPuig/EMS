<odoo>
    <data>
        <record model="ir.ui.view" id="view_workgroup_list">
            <field name="name">ims.workgroup.list</field>
            <field name="model">ims.workgroup</field>
            <field name="arch" type="xml">
                <tree expand="1" default_order="name asc">      
                    <field name="name" />
                    <field name="employee_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>   
    </data>
</odoo>