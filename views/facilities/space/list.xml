<odoo>
    <data>
        <record model="ir.ui.view" id="view_space_list">
            <field name="name">ims.space.list</field>
            <field name="model">ims.space</field>
            <field name="arch" type="xml">
                <tree expand="1" default_order="code asc">                           
                    <field name="code"/>
                    <field name="name"/>
                    <field name="space_type_id"/>
                </tree>
            </field>
        </record>        
    </data>
</odoo>