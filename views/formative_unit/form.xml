<odoo>
    <data>
        <record id="view_ims_formative_unit_form" model="ir.ui.view">
            <field name="name">UF form</field>
            <field name="model">ims.formative_unit</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="formative_unit">
                    <sheet>
                        <group string="Dades basiques">
                            <field name="name"/>
                            <field name="code"/>
                            <!-- <field name="teacher"/> -->
                            <field name="professional_module" widget="selection" 
                                options="{'model': 'ims.professional_module', 'field': ['code','name']}"/>
                        </group>
                        <!-- <group string="Dates">
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group> -->
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>