<odoo>
    <data>
        <record id="view_ims_formative_unit_form" model="ir.ui.view">
            <field name="name">UF form</field>
            <field name="model">ims.formative_unit</field>
            <field name="arch" type="xml">
                <form string="formative_unit">
                    <sheet>                      
                        <group string="Main data" col="3">
                            <group colspan="3">
                                <field name="professional_module" options="{'model': 'ims.professional_module', 'field': ['code','name']}"/>
                            </group>
                            <group>
                                <field name="code"/>
                            </group>
                            <group>							
                                <field name="acronym"/>
                            </group>
                            <group>							
                                <field name="name"/>
                            </group>
                        </group>

                        <notebook>                                                      
                            <page string="Notes">
                                <field name="notes" placeholder="Write down here your notes..."/>
                            </page>
                        </notebook>
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>