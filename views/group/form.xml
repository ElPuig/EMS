<odoo>
    <data>
        <record id="view_ims_group_form" model="ir.ui.view">
            <field name="name">group form</field>
            <field name="model">ims.group</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Groups">
                    <sheet>                        
                        <group class="o_group" string="Basic data">
                            <field name="acronym"/>
                            <field name="name"/>
                            <field name="email"/>
                        </group>                        
                        <notebook>
                            <page string="Students">
                                <field name="students" widget="one2many_list" context="{'show_attribute': False}">
                                    <tree>
                                        <field name="name"/>
                                        <field name="surname"/>
                                        <field name="email"/>                                        
                                    </tree>
                                </field>
                            </page>                                                                             
                            <page string="Notes">
                                <field name="notes" placeholder="Write down here your notes..."/>
                            </page>
                            <page string="Audit">
                                <group string="Audit">
                                    <field name="create_date"/>
                                    <field name="create_uid"/>
                                    <field name="write_date"/>
                                    <field name="write_uid"/>
                                </group>
                            </page>
                        </notebook>                
                    </sheet>	
                </form>
            </field>			
        </record>
        <record id="view_ims_group_form_2" model="ir.ui.view">
            <field name="name">group form</field>
            <field name="model">ims.group</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Group">
                    <sheet>                        
                        <group class="o_group" string="Basic data">
                            <field name="acronym"/>
                            <field name="name"/>
                            <field name="email"/>
                        </group>                        
                        <notebook>
                            <page string="Students">
                                <field name="students" widget="one2many_list" context="{'show_attribute': False}">
                                    <tree>
                                        <field name="name"/>
                                        <field name="surname"/>
                                        <field name="email"/>
                                    </tree>
                                </field>
                            </page>                                                                             
                            <page string="Notes">
                                <field name="notes" placeholder="Write down here your notes..."/>
                            </page>
                        </notebook>
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>