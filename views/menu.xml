<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>     
        <record model="ir.actions.act_window" id="action_ims_settings">
            <field name="name">Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'ims'}</field>
            </record>

        <record model="ir.actions.act_window" id="action_ims_formative_unit_tree">
            <field name="name">Formative Units Management</field>
            <field name="res_model">ims.formative_unit</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_by_professional_module': 1}</field>
        </record>

        <record model="ir.actions.act_window" id="action_ims_professional_module_tree">
            <field name="name">Professional Modules Management</field>
            <field name="res_model">ims.professional_module</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_by_study': 1}</field>
        </record>

        <record model="ir.actions.act_window" id="action_ims_study_tree">
            <field name="name">Studies Management</field>
            <field name="res_model">ims.study</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_by_level': 1}</field>
        </record>

        <record model="ir.actions.act_window" id="action_ims_student_tree">
            <field name="name">Students Management</field>
            <field name="res_model">ims.student</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_ims_teacher_tree">
            <field name="name">Teachers Management</field>
            <field name="res_model">ims.teacher</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_ims_tracking_tree">
            <field name="name">Tracking Management</field>
            <field name="res_model">ims.tracking</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_ims_level_tree">
            <field name="name">Levels Management</field>
            <field name="res_model">ims.level</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_ims_classroom_tree">
            <field name="name">Classroom Management</field>
            <field name="res_model">ims.classroom</field>
            <field name="view_mode">tree,form</field>
        </record>

         <record model="ir.actions.act_window" id="action_ims_group_tree">
            <field name="name">Grups Management</field>
            <field name="res_model">ims.group</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_ims_test_tree">
            <field name="name">Test Management</field>
            <field name="res_model">ims.test</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_ims_attendance_template_tree">
            <field name="name">Attendance Templates Management</field>
            <field name="res_model">ims.attendance_template</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_ims_attendance_group_tree">
            <field name="name">Attendance Groups Management</field>
            <field name="res_model">ims.attendance_group</field>
            <field name="view_mode">tree,form</field>
        </record>
            
        <menuitem id="menu_ims_root" name="Institute Management System"/>
        
        <menuitem name="Curriculum"     sequence="1" id="menu_ims_curriculum"       parent="menu_ims_root"/>
            <menuitem name="Levels"     sequence="1" id="menu_ims_levels"           parent="menu_ims_curriculum"        action="action_ims_level_tree"/>
            <menuitem name="Studies"    sequence="2" id="menu_ims_studies"          parent="menu_ims_curriculum"        action="action_ims_study_tree"/>
            <menuitem name="PMs"        sequence="3" id="menu_ims_mps"              parent="menu_ims_curriculum"        action="action_ims_professional_module_tree"/>
            <menuitem name="FUs"        sequence="4" id="menu_ims_ufs"              parent="menu_ims_curriculum"        action="action_ims_formative_unit_tree"/>

        <menuitem name="Facilities"     sequence="2" id="menu_ims_facilities"       parent="menu_ims_root"/>
            <menuitem name="Classrooms" sequence="1" id="menu_ims_classrooms"       parent="menu_ims_facilities"        action="action_ims_classroom_tree"/>

        <menuitem name="Organisation"   sequence="3" id="menu_ims_organisation"     parent="menu_ims_root"/>
            <menuitem name="Teachers"   sequence="1" id="menu_ims_teachers"         parent="menu_ims_organisation"      action="action_ims_teacher_tree"/>        
            <menuitem name="Students"   sequence="2" id="menu_ims_students"         parent="menu_ims_organisation"      action="action_ims_student_tree"/>
            <menuitem name="Groups"     sequence="3" id="menu_ims_groups"           parent="menu_ims_organisation"      action="action_ims_group_tree"/>        
        
        <!-- <menuitem name="Tracking" id="menu_ims_groups" parent="menu_ims_root" action="action_ims_tracking_tree"/>         -->
                
        <!-- <menuitem name="Test" id="menu_ims_test" parent="menu_ims_root" action="action_ims_test_tree"/>            -->

        <!-- <menuitem id="menu_ims_attendance" name="Attendance" parent="menu_ims_root"/> -->
            <!-- <menuitem name="Templates" id="menu_ims_attendance_template" parent="menu_ims_attendance" action="action_ims_attendance_template_tree"/> -->

        <menuitem name="Configuration"  sequence="4" id="menu_ims_configuration"    parent="menu_ims_root" />
            <menuitem name="Settings"   sequence="1" id="menu_ims_settings"         parent="menu_ims_configuration"     action="action_ims_settings"/>
    </data>
</odoo>