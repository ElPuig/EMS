<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>   
        <!-- Actions  -->
        <record model="ir.actions.act_window" id="action_settings">
            <field name="name">Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'ims'}</field>
        </record>

        <record model="ir.actions.act_window" id="action_formative_unit_tree">
            <field name="name">Formative Units</field>
            <field name="res_model">ims.formative_unit</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_by_professional_module': 1}</field>
        </record>

        <record model="ir.actions.act_window" id="action_professional_module_tree">
            <field name="name">Professional Modules</field>
            <field name="res_model">ims.professional_module</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_by_study': 1}</field>
        </record>

        <record model="ir.actions.act_window" id="action_study_tree">
            <field name="name">Studies</field>
            <field name="res_model">ims.study</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_by_level': 1}</field>
        </record>

        <record model="ir.actions.act_window" id="action_administrative_tree">
            <field name="name">Administratives</field>
            <field name="res_model">ims.administrative</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_student_tree">
            <field name="name">Students</field>
            <field name="res_model">ims.student</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_group_by_group': 1}</field>
        </record>

        <record model="ir.actions.act_window" id="action_teacher_tree">
            <field name="name">Teachers</field>
            <field name="res_model">ims.teacher</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_provider_tree">
            <field name="name">Providers</field>
            <field name="res_model">ims.provider</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_tracking_tree">
            <field name="name">Tracking</field>
            <field name="res_model">ims.tracking</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_level_tree">
            <field name="name">Levels</field>
            <field name="res_model">ims.level</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_classroom_tree">
            <field name="name">Classrooms</field>
            <field name="res_model">ims.classroom</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_student_group_tree">
            <field name="name">Groups (for students)</field>
            <field name="res_model">ims.student_group</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_teacher_role_tree">
            <field name="name">Teacher Roles</field>
            <field name="res_model">ims.teacher_role</field>
            <field name="view_mode">tree,form</field>
        </record>  

        <record model="ir.actions.act_window" id="action_administrative_role_tree">
            <field name="name">Administrative Roles</field>
            <field name="res_model">ims.administrative_role</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_company_tree">
            <field name="name">Companies</field>
            <field name="res_model">ims.company</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_attendance_template_tree">
            <field name="name">Attendance Templates</field>
            <field name="res_model">ims.attendance_template</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="action_attendance_group_tree">
            <field name="name">Attendance Groups</field>
            <field name="res_model">ims.attendance_group</field>
            <field name="view_mode">tree,form</field>
        </record> 

        <record model="ir.actions.act_window" id="action_newteacher_tree">
            <field name="name">NEW TEACHER</field>
            <!-- <field name="res_model">ims.newteacher</field> -->
            <field name="res_model">hr.employee</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>   

         <record model="ir.actions.act_window" id="action_publicteacher_tree">
            <field name="name">PUBLIC TEACHER</field>
            <!-- <field name="res_model">ims.newteacher</field> -->
            <field name="res_model">hr.employee.public</field>
            <field name="view_mode">tree,kanban,form</field>
        </record>                    
        
        <!-- MenÃº -->
        <menuitem id="menu_curriculum" name="Curriculum" />
            <menuitem name="Levels"     sequence="1" id="menu_levels"               parent="menu_curriculum"    action="action_level_tree"/>
            <menuitem name="Studies"    sequence="2" id="menu_studies"              parent="menu_curriculum"    action="action_study_tree"/>
            <menuitem name="PMs"        sequence="3" id="menu_mps"                  parent="menu_curriculum"    action="action_professional_module_tree"/>
            <menuitem name="FUs"        sequence="4" id="menu_ufs"                  parent="menu_curriculum"    action="action_formative_unit_tree"/>

        <menuitem id="menu_facilities" name="Facilities" />
            <menuitem name="Classrooms" sequence="1" id="menu_classrooms"           parent="menu_facilities"    action="action_classroom_tree"/>

        <menuitem id="menu_people" name="People" />
            <menuitem name="Providers"              sequence="1" id="menu_providers"        parent="menu_people"    action="action_provider_tree"/>            
            <menuitem name="Administratives"        sequence="2" id="menu_administratives"  parent="menu_people"    action="action_administrative_tree"/>        
            <menuitem name="Teachers"               sequence="3" id="menu_teachers"         parent="menu_people"    action="action_teacher_tree"/>        
            <menuitem name="Students"               sequence="4" id="menu_students"         parent="menu_people"    action="action_student_tree"/>
            <menuitem name="NEW TEACHER"            sequence="5" id="menu_newteacher"       parent="menu_people"    action="action_newteacher_tree"/>
            <menuitem name="Public TEACHER"         sequence="6" id="menu_publicteacher"    parent="menu_people"    action="action_publicteacher_tree"/>
            
            <menuitem name="Configuration"          sequence="5" id="menu_people_config"    parent="menu_people"    action="action_settings"/>
                <menuitem name="Providers"          sequence="1" id="menu_people_config_provs"                          parent="menu_people_config"/>
                    <menuitem name="Companies"      sequence="1" id="menu_company"          parent="menu_people_config_provs"       action="action_company_tree"/>
                
                <menuitem name="Students"           sequence="1" id="menu_people_config_students"                       parent="menu_people_config"/>
                    <menuitem name="Groups"         sequence="1" id="menu_student_groups"   parent="menu_people_config_students"    action="action_student_group_tree"/>
                
            <!-- Employees config menu -->                
                <menuitem name="Administrative Roles"   sequence="1" id="menu_admin_roles"      parent="hr.menu_config_employee"    action="action_administrative_role_tree"/>
                <menuitem name="Teacher Roles"          sequence="1" id="menu_teacher_roles"    parent="hr.menu_config_employee"    action="action_teacher_role_tree"/>                
        
            
            

        <!-- <menuitem id="menu_attendance" name="Attendance" parent="menu_root"/> -->
            <!-- <menuitem name="Templates" id="menu_attendance_template" parent="menu_attendance" action="action_attendance_template_tree"/> -->               
    </data>
</odoo>