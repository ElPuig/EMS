<odoo>
    <data>
        <record model="ir.ui.view" id="view_ims_company_form">
            <field name="name">ims.company.form</field>
            <field name="model">ims.company</field>
            <field name="arch" type="xml">
                <form string="company">
                    <sheet>
                        <group col="4">
                            <group string="">
                                <field name="image" string="" widget="image" />
                            </group>

                            <group col="1" colspan="3">
                                <group string="Main data">
                                    <group>
                                        <field name="name"/>    
                                    </group>
                                    <group>
                                        <field name="vat"/>    
                                    </group>                                                   
                                </group>  
                            </group>                         
                        </group>
               
                        <notebook>      
                            <page string="Contacts">
                                <field name="contacts" mode="kanban">
                                     <kanban>
                                        <field name="id"/>
                                        <field name="image" color="grey"/>
                                        <field name="name"/>
                                        <field name="surname"/>
                                        <field name="email"/>
                                        <field name="role"/>
                                        
                                        <templates>    

                                        <!-- <template name="provider_kanban_box" inherit_id="ims.base_kanban_box">
                                           <xpath expr="//div[@id='image']/img" position="inside">
                                            </xpath> -->
                                                
                                            <!-- <t t-name="kanban-box" t-inherit="base_kanban_box" t-inherit-mode="primary">                                                                                              
                                                <xpath expr="//div[@id='image']/img" position="inside">
                                                </xpath>
                                            </t>   -->


                                            <t t-name="kanban-box">
                                                <div t-attf-class="oe_kanban_global_click">                        
                                                    <div class="oe_kanban_content">
                                                        <div class="o_kanban_image">
                                                            <img id="photo" alt="Photo" t-att-src="kanban_image('ims.provider', 'image', record.id.raw_value)"/>
                                                        </div>
                                                        <div id="title" class="oe_kanban_details">
                                                            <strong class="oe_partner_heading">                                        
                                                                <t t-esc="record.name.value"/>
                                                                <t> </t> 
                                                                <t t-esc="record.surname.value"/>
                                                            </strong>
                                                            <div class="oe_kanban_partner_info">                                                                                    
                                                                <span>
                                                                    <t t-esc="record.email.value" />
                                                                </span>
                                                                <br />
                                                                <span>
                                                                    <t t-esc="record.role.value" />
                                                                </span>
                                                            </div>                                                            
                                                        </div>
                                                    </div>
                                                </div>                                                
                                            </t>    
                                              
                                            <!-- <t t-call="base_kanban_box">
                                                    <t t-set="model" t-value="ims.provider"/>
                                                </t> -->                                      
                                        </templates>
                                    </kanban>
                                </field>
                            </page>

                            <page string="Notes">
                                <field name="notes" placeholder="Write down here your notes..."/>
                            </page>
                        </notebook>
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>