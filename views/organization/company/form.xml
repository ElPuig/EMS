<odoo>
    <data>
        <record model="ir.ui.view" id="view_company_form">
            <field name="name">ims.company.form</field>
            <field name="model">ims.company</field>
            <field name="mode">primary</field>      
            <field name="inherit_id" ref="template_form_with_photo"/>      
            <field name="arch" type="xml">
                <xpath expr="//group[@id='data']" position="inside">         
                   <group string="Conact data (corporate)">
                        <group>
                            <field name="vat"/>    
                        </group>                        
                    </group>        
                </xpath>

                <xpath expr="//page[@id='notes']" position="before">         
                    <page string="Contacts">
                        <field name="contacts" mode="kanban">
                                <kanban>
                                <field name="id"/>
                                <field name="image" color="grey"/>
                                <field name="name"/>
                                <field name="surname"/>
                                <field name="email"/>
                                <field name="role"/>
                                
                                <templates>                                                                                          
                                    <t t-name="kanban-box">
                                        <div t-attf-class="oe_kanban_global_click">                        
                                            <div class="oe_kanban_content">
                                                <div class="o_kanban_image">
                                                    <img id="photo" alt="Photo" t-att-src="kanban_image('ims.provider', 'image', record.id.raw_value)"/>
                                                </div>
                                                <div id="title" class="oe_kanban_details">
                                                    <strong class="oe_partner_heading">                                        
                                                        <t t-esc="record.name.value"/>
                                                        <t> </t> 
                                                        <t t-esc="record.surname.value"/>
                                                    </strong>
                                                    <div class="oe_kanban_partner_info">                                                                                    
                                                        <span>
                                                            <t t-esc="record.email.value" />
                                                        </span>
                                                        <br />
                                                        <span>
                                                            <t t-esc="record.role.value" />
                                                        </span>
                                                    </div>                                                            
                                                </div>
                                            </div>
                                        </div>                                                
                                    </t>                                                                             
                                </templates>
                            </kanban>
                        </field>
                    </page>    
                </xpath>
            </field>			
        </record>
    </data>
</odoo>