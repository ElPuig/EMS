<odoo>
    <data>
        <record id="view_ims_company_form" model="ir.ui.view">
            <field name="name">company form</field>
            <field name="model">ims.company</field>
            <field name="arch" type="xml">
                <form string="company">
                    <sheet>
                        <group col="4">
                            <group string="">
                                <field name="image" string="" widget="image" />
                            </group>

                            <group col="1" colspan="3">
                                <group string="Main data">
                                    <group>
                                        <field name="name"/>    
                                    </group>
                                    <group>
                                        <field name="vat"/>    
                                    </group>                                                   
                                </group>  
                            </group>                         
                        </group>
               
                        <notebook>      
                            <page string="Contacts">
                                <field name="contacts" mode="kanban">
                                     <kanban>
                                        <field name="id"/>
                                        <field name="image" color="grey"/>
                                        <field name="name"/>
                                        <field name="surname"/>
                                        <field name="email"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div t-attf-class="oe_kanban_global_click">                        
                                                    <div class="oe_kanban_content">
                                                        <div class="o_kanban_image">
                                                            <img id="photo" alt="Photo" t-att-src="kanban_image('ims.person', 'image', record.id.raw_value)"/>
                                                        </div>
                                                        <div id="title" class="oe_kanban_details">
                                                            <strong class="oe_partner_heading">                                        
                                                                <t t-esc="record.name.value"/>
                                                                <t> </t> 
                                                                <t t-esc="record.surname.value"/>
                                                            </strong>
                                                            <div id="info" class="oe_kanban_partner_info">                                                                                    
                                                                <span>
                                                                    <t t-esc="record.email.value" />
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>

                            <page string="Notes">
                                <field name="notes" placeholder="Write down here your notes..."/>
                            </page>
                        </notebook>
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>