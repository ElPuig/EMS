<odoo>
    <data>
        <record id="view_ims_company_kanban" model="ir.ui.view">
            <field name="name">ims.company kanban view</field>
            <field name="model">ims.company</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="image" color="grey"/>
                    <field name="name"/>
                    <field name="vat"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">                        
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_image">
                                        <img alt="Photo" t-att-src="kanban_image('ims.company', 'image', record.id.raw_value)"/>
                                    </div>
                                    <div class="oe_kanban_details">
                                        <strong class="oe_partner_heading">                                        
                                            <t t-esc="record.name.value"/>                                            
                                        </strong>                                        
                                    </div>
                                </div>
                            </div>
                        </t>
			        </templates>
                </kanban>
            </field>
        </record>

        <record id="action_ims_company_kanban" model="ir.actions.act_window">
            <field name="name">ims.company kanban action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ims.company</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_ims_company_kanban"/>
        </record>
    </data>
</odoo>