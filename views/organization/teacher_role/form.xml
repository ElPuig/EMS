<odoo>
    <data>
        <record model="ir.ui.view" id="view_teacher_role_form">
            <field name="name">ims.teacher_role.form</field>
            <field name="model">ims.teacher_role</field>
            <field name="arch" type="xml">
                <form string="teacher_role">
                    <sheet>
                        <group string="Main data" col="4">
                            <group>
                                <field name="name"/>                                
                            </group>
                            <group>
                                <field name="color" widget="color_picker"/>                                
                            </group>
                            <group>
                                <field string="Assignable to" name="employee_type"/>                                
                            </group>
                        </group>  

                        <notebook>         
                            <page string="Assigned to">
                                <field name="teachers" mode="kanban" inherit_id="view_teacher_kanban" />
                            </page>     

                            <page string="Notes">
                                <field name="notes" placeholder="Write down here your notes..."/>
                            </page>
                        </notebook>                  
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>