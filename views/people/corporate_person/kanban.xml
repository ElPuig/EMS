<odoo>
    <data>
        <record model="ir.ui.view" id="ims_view_corporate_person_kanban">
            <field name="name">ims.corporate_person.kanban</field>
            <field name="model">ims.corporate_person</field>
            <field name="mode">primary</field>      
            <field name="inherit_id" ref="ims.view_person_kanban"/> 
            <field name="arch" type="xml">  
                <xpath expr="//img[@id='photo']" position="attributes">
                    <attribute name="t-att-src">kanban_image('ims.corporate_person', 'image', record.id.raw_value)</attribute>
                </xpath> 

                <xpath expr="//kanban" position="inside">
                    <!-- WARNING: All the Kanban fields must be included also as "fields" within the view. -->
                    <field id="email_field" name="corporate_email"/>
                </xpath>     

                <xpath expr="//div[@id='info']/span" position="replace">
                    <span>
                        <t t-esc="record.corporate_email.value" />
                    </span>
                </xpath>     
            </field>		      
        </record>
    </data>
</odoo>