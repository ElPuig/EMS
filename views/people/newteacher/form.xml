<odoo>
    <data>
        <record model="ir.ui.view" id="view_newteacher_form">
            <field name="name">ims.newteacher.form</field>
            <field name="model">hr.employee</field>            
            <field name="inherit_id" ref="hr.view_employee_form"/> 
            <field name="arch" type="xml">                          
                <!-- 
                    TODO:   The employee_type should be used as placeholder within 'Employee Name'. Â¿Maybe an onchange within the employee_type selection?
                            Other option is to have different views and call them manually, but I don't like this approach...
                 -->
                <!-- <field name="name" position="attributes">
                    <attribute name="attrs">{'placeholder':'TEST'}</attribute>
                </field> -->

                <field name="name" position="replace">
                    <!-- NOTE: I could'nt find a way to setup the placeholders as a computed field using the 'employee_type'... -->
                    <field name="name" placeholder="Employee's Name"    groups="hr.group_hr_user" attrs="{'invisible': [('employee_type', '!=', 'employee')]}"/>
                    <field name="name" placeholder="Student's Name"     groups="hr.group_hr_user" attrs="{'invisible': [('employee_type', '!=', 'student')]}"/>
                    <field name="name" placeholder="Trainees's Name"    groups="hr.group_hr_user" attrs="{'invisible': [('employee_type', '!=', 'trainee')]}"/>
                    <field name="name" placeholder="Contractor's Name"  groups="hr.group_hr_user" attrs="{'invisible': [('employee_type', '!=', 'contractor')]}"/>
                    <field name="name" placeholder="Freelance's Name"   groups="hr.group_hr_user" attrs="{'invisible': [('employee_type', '!=', 'freelance')]}"/>
                    <field name="name" placeholder="Teacher's Name"     groups="hr.group_hr_user" attrs="{'invisible': [('employee_type', '!=', 'teacher')]}"/>
                    <field name="name" placeholder="ASP's Name"         groups="hr.group_hr_user" attrs="{'invisible': [('employee_type', '!=', 'asp')]}"/>
                </field>

                <xpath expr="//group[@name='payroll_group']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>    

                <field name="job_title" position="before">
                    <field name="roles" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Roles" />
                </field>

                <field name="job_title" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                
                <field name="category_ids" position="attributes">
                   <attribute name="invisible">1</attribute>
                </field>

                <field name="coach_id" position="attributes">
                   <attribute name="groups">hr.group_hr_user</attribute>
                   <attribute name="attrs">{'invisible': [('employee_type', '!=', 'student')]}</attribute>
                </field>
              
                <field name="parent_id" position="attributes">
                    <attribute name="groups">hr.group_hr_user</attribute>
                    <attribute name="attrs">{'invisible': [('employee_type', '=', 'student')]}</attribute>
                </field>

                <field name="employee_type" position="after">
                    <field name="contract_type" />
                </field>                
            </field>		      
        </record>   
    </data>
</odoo>