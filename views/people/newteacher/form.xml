<odoo>
    <data>
        <record model="ir.ui.view" id="view_newteacher_form">
            <field name="name">ims.newteacher.form</field>
            <field name="model">hr.employee</field>            
            <field name="inherit_id" ref="hr.view_employee_form"/> 
            <field name="arch" type="xml">           
                <!--TODO: 
                    [X] - Job position should not be used. Hide it.
                    [X] - Employemnt type should be added to the employee.
                    [X] - Tags should not be used. Hide it.
                    [X] - Roles replaces tags, so should be displayed within the menu.
                -->

                <xpath expr="//group[@name='payroll_group']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>    

                <field name="job_title" position="before">
                    <field name="roles" widget="many2many_tags" placeholder="Roles" />
                </field>

                <xpath expr="//field[@name='job_title']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='category_ids']" position="attributes">
                   <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='coach_id']" position="attributes">
                   <attribute name="groups">hr.group_hr_user</attribute>
                   <attribute name="attrs">{'invisible': [('employee_type', '!=', 'student')]}</attribute>
                </xpath>
              
                <xpath expr="//field[@name='parent_id']" position="attributes">
                    <attribute name="groups">hr.group_hr_user</attribute>
                    <attribute name="attrs">{'invisible': [('employee_type', '=', 'student')]}</attribute>
                </xpath>

                <field name="employee_type" position="after">
                    <field name="contract_type" />
                </field>

                <!-- <field name="mobile_phone" position="before">
                    <field name="type" />
                </field> -->
            </field>		      
        </record>   
    </data>
</odoo>