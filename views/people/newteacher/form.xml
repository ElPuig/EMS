<odoo>
    <data>
        <record model="ir.ui.view" id="view_newteacher_form">
            <field name="name">ims.newteacher.form</field>
            <field name="model">hr.employee</field>            
            <field name="inherit_id" ref="hr.view_employee_form"/> 
            <field name="arch" type="xml">           
                <!--TODO: 
                    [X]. Add the "teacher" value to the "job_position" list.
                    [ ]. "job_position" field should be a dropdown defaulted "teacher".
                    [X]. "tags" should be replaced with "teacher_roles".
                    [X]. "coach" will be used for students, but no need to display this field for teachers.
                    [X]. "payroll" group can be hided.

                -->

                <xpath expr="//group[@name='payroll_group']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>    

                <xpath expr="//field[@name='job_title']" position="attributes">
                    <attribute name="name">job_id</attribute>
                    <attribute name="placeholder">Position</attribute>
                </xpath>

                <xpath expr="//field[@name='category_ids']" position="attributes">
                    <attribute name="name">roles</attribute>
                    <attribute name="placeholder">Roles</attribute>
                    <attribute name="options"></attribute>
                </xpath>

                <xpath expr="//field[@name='coach_id']" position="attributes">
                    <attribute name="attrs">{'invisible': [('job_id', '!=', 10)]}</attribute>
                </xpath>

                <xpath expr="//field[@name='parent_id']" position="attributes">
                    <attribute name="attrs">{'invisible': [('job_id', '=', 10)]}</attribute>
                </xpath>

                <!-- <field name="mobile_phone" position="before">
                    <field name="type" />
                </field> -->
            </field>		      
        </record>   
    </data>
</odoo>