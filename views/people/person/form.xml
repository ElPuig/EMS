<odoo>
    <data>
        <record model="ir.ui.view" id="view_person_form">
            <field name="name">ims.person.form</field>
            <field name="model">ims.person</field>
             <field name="mode">primary</field>      
            <field name="inherit_id" ref="template_form_with_photo"/>      
            <field name="arch" type="xml">
                <xpath expr="//group[@id='main']" position="inside">
                    <group>
                        <field name="surname"/>    
                    </group>                                          
                </xpath>

                <xpath expr="//group[@id='data']" position="inside">                                              
                    <group id="contact" string="Contact data (personal)">
                        <group>
                            <field name="phone" string="Phone"/>    
                        </group>
                        <group>
                            <field name="email" string="Email"/>    
                        </group>                                                   
                    </group> 
                </xpath>
            </field>			
        </record>
    </data>
</odoo>