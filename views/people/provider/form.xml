<odoo>
    <data>
        <record model="ir.ui.view" id="ims_view_provider_form">
            <field name="name">ims.provider.form</field>
            <field name="model">ims.provider</field>
            <field name="mode">primary</field>      
            <field name="inherit_id" ref="ims_view_person_form"/>      
            <field name="arch" type="xml"> 
                <xpath expr="//group[@id='photo']" position="inside">
                    <field name="role" placeholder="Role" string="" /> <!-- Ther's no tag widget for a Many2one field :( -->                        
                </xpath>

                <xpath expr="//group[@id='contact']" position="after">         
                    <group string="Administrative data">                       
                        <group>
                            <field name="company"/>    
                        </group>                                                                          
                    </group>           
                </xpath>
            </field>		            
        </record>
    </data>
</odoo>