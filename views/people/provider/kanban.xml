<odoo>
    <data>
        <record model="ir.ui.view" id="ims_view_provider_kanban">
            <field name="name">ims.provider.kanban</field>
            <field name="model">ims.provider</field>
            <field name="mode">primary</field>      
            <field name="inherit_id" ref="ims_view_person_kanban"/> 
            <field name="arch" type="xml">  
                <xpath expr="//img[@id='photo']" position="attributes">
                    <attribute name="t-att-src">kanban_image('ims.provider', 'image', record.id.raw_value)</attribute>
                </xpath> 

                <xpath expr="//kanban" position="inside">
                    <!-- WARNING: All the Kanban fields must be included also as "fields" within the view. -->
                    <field name="company"/>
                    <field name="role"/>
                </xpath>

                <xpath expr="//div[@id='info']/span" position="after">                    
                    <span t-if="record.company.value != ''">
                        <br />
                        <i>
                            <t t-esc="record.company.value"/>
                        </i>                     
                    </span>
                    <span t-if="record.role.value != ''">
                        <br />
                        <i>
                            <t t-esc="record.role.value"/>
                        </i>                     
                    </span>
                </xpath> 
            </field>		      
        </record>
    </data>
</odoo>