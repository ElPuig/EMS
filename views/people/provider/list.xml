<odoo>
    <data>
        <record model="ir.ui.view" id="view_provider_list">
            <field name="name">ims.provider.list</field>
            <field name="model">ims.provider</field>
            <field name="mode">primary</field>      
            <field name="inherit_id" ref="view_person_list"/> 
            <field name="arch" type="xml">  
                <xpath expr="//tree" position="inside">
                    <field name="name"/>
                    <field name="surname"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="company"/>
                    <field name="role"/>        
                </xpath>              
            </field>		      
        </record>   
    </data>
</odoo>