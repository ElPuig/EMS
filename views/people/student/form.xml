<odoo>
    <data>
        <record model="ir.ui.view" id="ims_view_student_form">
            <field name="name">ims.student.form</field>
            <field name="model">ims.student</field>
            <field name="mode">primary</field>      
            <field name="inherit_id" ref="ims.view_corporate_person_form"/>      
            <field name="arch" type="xml"> 
                <xpath expr="//group[@id='photo']" position="inside">
                    <field name="group" placeholder="Group" string="" /> <!-- Ther's no tag widget for a Many2one field :( -->                        
                </xpath>

                <xpath expr="//group[@id='data']" position="inside">         
                    <group string="Administrative data">                       
                        <group>
                            <field name="tutor"/>    
                        </group>                                                   
                    </group>           
                </xpath>
            </field>		            
        </record>
    </data>
</odoo>