<odoo>
    <data>
        <record model="ir.ui.view" id="view_student_kanban">
            <field name="name">ims.student.kanban</field>
            <field name="model">ims.student</field>
            <field name="mode">primary</field>      
            <field name="inherit_id" ref="view_corporate_person_kanban"/> 
            <field name="arch" type="xml">  
                <xpath expr="//img[@id='photo']" position="attributes">
                    <attribute name="t-att-src">kanban_image('ims.student', 'image', record.id.raw_value)</attribute>
                </xpath>               

                <xpath expr="//kanban" position="inside">
                    <!-- WARNING: All the Kanban fields must be included also as "fields" within the view. -->
                    <field name="group"/>
                    <field name="tutor"/>
                </xpath>

                <xpath expr="//div[@id='info']/span" position="after">                    
                    <span t-if="record.group.value != ''">
                        <br />
                        <i>
                            <t t-esc="record.group.value"/> (<t t-esc="record.tutor.value"/>)
                        </i>                     
                    </span>
                </xpath> 
            </field>		      
        </record>
    </data>
</odoo>