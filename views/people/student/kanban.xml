<odoo>
    <data>
        <record id="view_ims_student_kanban" model="ir.ui.view">
            <field name="name">ims.student kanban view</field>
            <field name="model">ims.student</field>
            <field name="mode">primary</field>      
            <field name="inherit_id" ref="ims.view_ims_corporate_person_kanban"/> 
            <field name="arch" type="xml">  
                <xpath expr="//img[@id='photo']" position="attributes">
                    <attribute name="t-att-src">kanban_image('ims.student', 'image', record.id.raw_value)</attribute>
                </xpath> 

                <xpath expr="//kanban" position="inside">
                    <!-- WARNING: All the Kanban fields must be included also as "fields" within the view. -->
                    <field name="group"/>
                </xpath>

                <xpath expr="//div[@id='info']/span" position="after">
                    <br />
                    <span>
                        <i>
                            <t t-esc="record.group.value"/>
                        </i>                     
                    </span>
                </xpath> 
            </field>		      
        </record>
    </data>
</odoo>