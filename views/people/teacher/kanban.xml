<odoo>
    <data>
        <record model="ir.ui.view" id="view_ims_teacher_kanban">
            <field name="name">ims.teacher.kanban</field>
            <field name="model">ims.teacher</field>
            <field name="mode">primary</field>      
            <field name="inherit_id" ref="ims.view_ims_corporate_person_kanban"/> 
            <field name="arch" type="xml">  
                <xpath expr="//img[@id='photo']" position="attributes">
                    <attribute name="t-att-src">kanban_image('ims.teacher', 'image', record.id.raw_value)</attribute>
                </xpath>    

                 <xpath expr="//kanban" position="inside">
                    <!-- WARNING: All the Kanban fields must be included also as "fields" within the view. -->
                    <field name="roles_str"/>
                    <field name="tutorships_str"/>
                </xpath>

                <xpath expr="//div[@id='info']/span" position="after">                                                            
                    <span t-if="record.roles_str.value != ''">
                        <br />
                        <i>
                            <t t-esc="record.roles_str.value"/>
                        </i>                     
                    </span>                    
                    <span t-if="record.tutorships_str.value != ''">
                        <br />
                        <i>                            
                            <t t-esc="record.tutorships_str.value"/>
                        </i>                     
                    </span>
                </xpath>           
            </field>		      
        </record>
    </data>
</odoo>