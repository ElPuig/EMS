<odoo>
    <data>
        <record id="view_ims_professional_module_form" model="ir.ui.view">
            <field name="name">MP form</field>
            <field name="model">ims.professional_module</field>
            <field name="type">form</field>
            <field name="arch" type="xml">				
                <form string="professional_module">                   
                    <sheet>                        
                        <group string="Main data" col="3">
                            <group>
                                <field name="code"/>
                            </group>
                            <group>							
                                <field name="acronym"/>
                            </group>
                            <group>							
                                <field name="name"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Formative Units">
                                <field name="formative_units" widget="one2many_list" context="{'show_attribute': False}">
                                    <tree>
                                        <field name="code"/>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Notes">
                                <field name="notes" placeholder="Write down here your notes..."/>
                            </page>
                        </notebook>
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>