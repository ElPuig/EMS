<odoo>
    <data>
        <record id="view_ims_student_form" model="ir.ui.view">
            <field name="name">Student form</field>
            <field name="model">ims.student</field>
            <field name="mode">primary</field>      
            <field name="inherit_id" ref="ims.view_ims_person_form"/>      
            <field name="arch" type="xml">                
                <xpath expr="//group[@id='data']" position="inside">         
                    <group string="Administrative data">
                        <group>
                            <field name="group"/>    
                        </group>
                        <group>
                            <field name="tutor"/>    
                        </group>                                                   
                    </group>           
                </xpath>
            </field>		            
        </record>
    </data>
</odoo>