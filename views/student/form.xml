<odoo>
    <data>
        <record id="view_ims_student_form" model="ir.ui.view">
            <field name="name">Student form</field>
            <field name="model">ims.student</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Student">
                    <sheet>
                        <group col="4">
                            <group string="Photo">
                                <!-- <field name="image" widget="image" nolabel="1" /> reduces also the image size, and I prefer to do not mess with the styles -->
                                <field name="image" widget="image" />
                            </group>

                            <group col="1" colspan="3">
                                <group string="Main data">
                                    <group>
                                        <field name="name"/>    
                                    </group>
                                    <group>
                                        <field name="surname"/>    
                                    </group>                                                   
                                </group>  

                                <group string="Conact data (personal)">
                                    <group>
                                        <field name="personal_phone"/>    
                                    </group>
                                    <group>
                                        <field name="personal_email"/>    
                                    </group>                                                   
                                </group> 

                                <group string="Conact data (professional)">
                                    <group>
                                        <field name="corporate_phone"/>    
                                    </group>
                                    <group>
                                        <field name="corporate_email"/>    
                                    </group>                                                   
                                </group> 
                            </group>                         
                        </group>
               
                        <notebook>                                                        
                            <page string="Notes">
                                <field name="notes" placeholder="Write down here your notes..."/>
                            </page>
                        </notebook>
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>