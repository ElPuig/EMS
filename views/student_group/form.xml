                            <field name="code"/>
                            <field name="name"/>
                            <field name="email"/>
                        </group>                        
                        <notebook>
                            <page string="Alumnes">
                                <field name="students" widget="one2many_list" context="{'show_attribute': False}">
                                    <tree>
                                        <field name="name"/>
                                        <field name="surname"/>
                                        <field name="email"/>
                                    </tree>
                                </field>
                            </page>                                                                             
                            <page string="Anotacions">
                                <field name="notes" placeholder="Espai reservat per a anotacions..."/>
                            </page>
                        </notebook>
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>