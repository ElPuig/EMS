<odoo>
    <data>
        <record id="view_ims_study_form" model="ir.ui.view">
            <field name="name">Study form</field>
            <field name="model">ims.study</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Studies">
                    <sheet>                        
                        <group string="Basic data">
                            <field name="code"/>
                            <field name="name"/>
                            <field name="deprecated"/>                                                
                        </group>
                        <notebook>                                                        
                            <page string="Notes">
                                <field name="notes" placeholder="Write down here your notes..."/>
                            </page>
                        </notebook>
                    </sheet>	
                </form>
            </field>			
        </record>
    </data>
</odoo>