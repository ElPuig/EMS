<odoo>
    <data>
        <record id="view_ims_teacher_form" model="ir.ui.view">
            <field name="name">Teacher form</field>
            <field name="model">ims.teacher</field>
            <field name="mode">primary</field>      
            <field name="inherit_id" ref="ims.view_ims_corporate_person_form"/>      
            <field name="arch" type="xml">                
                <xpath expr="//page[@id='notes']" position="before">
                    <page string="Teaching">
                        <field name="teaching">
                            <tree editable="bottom">
                                <field name="formative_unit"/>
                                <field name="group"/>
                            </tree>
                        </field>
                    </page>    

                    <page string="Tutor">
                        <field name="tutor" widget="many2many">
                            <tree>
                                <field name="name" string="Group"/>
                                <field name="classroom"/>
                            </tree>
                        </field>
                    </page>  
                </xpath>
            </field>		            
        </record>
    </data>
</odoo>