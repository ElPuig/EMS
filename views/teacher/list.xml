<odoo>
    <data>
        <record model="ir.ui.view" id="teacher_list">
            <field name="name">ims teacher list</field>
            <field name="model">ims.teacher</field>
            <field name="arch" type="xml">
                <tree expand="1" default_order="surname asc">                          
                    <field name="surname"/>
                    <field name="name"/>
                    <field name="corporate_email"/>                    
                </tree>
            </field>
        </record>   
    </data>
</odoo>